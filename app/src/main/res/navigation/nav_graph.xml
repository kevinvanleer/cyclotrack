<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/LiveDataFragment"
        android:name="com.kvl.cyclotrack.LiveDataFragment"
        android:label="Current Activity"
        tools:layout="@layout/live_data_fragment">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
    </fragment>
    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.kvl.cyclotrack.FirstFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_start_activity"
            app:destination="@id/LiveDataFragment" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.kvl.cyclotrack.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_start_activity"
            app:destination="@id/LiveDataFragment" />
    </fragment>
</navigation>