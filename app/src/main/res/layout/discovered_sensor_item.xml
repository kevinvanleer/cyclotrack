<?xml version="1.0" encoding="utf-8"?>
<com.kvl.cyclotrack.DiscoveredBleDevice xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/discovered_sensor_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <CheckBox
            android:id="@+id/checkbox_select_discovered_sensor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sensor name"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textview_discovered_sensor_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:text="Sensor type"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/checkbox_select_discovered_sensor" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.kvl.cyclotrack.DiscoveredBleDevice>